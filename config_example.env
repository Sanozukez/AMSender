# mail-sender/config_example.env
# Copie este arquivo para .env e preencha com suas credenciais

# Configurações SMTP Google Workspace
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=seu-email@amatools.com.br
SMTP_PASSWORD=sua-senha-de-app-aqui

# Delay entre envios (em segundos)
# Recomendação Google: 1-2s para contas normais, 2-3s para lotes maiores
EMAIL_DELAY=2.5

# Configurações de comprovação
COMPROVACOES_DIR=comprovacoes
LOGS_DIR=logs

